<a class="cell" href=<%= cocktail_path(cocktail) %>>
  <div class="flip-card card" ontouchstart="this.classList.toggle('hover');">
    <div class="flip-card-inner">
      <div class="flip-card-inner-front" style="<%= "background: url(#{cocktail.photo_url}) 0 0 no-repeat; background-size: cover;" %>">
        <span><%= cocktail.name %></span>
      </div>

      <div class="flip-card-inner-back" style="<%= "background: url(#{cocktail.photo_url}) 0 0 no-repeat; background-size: cover;" %>">
        <div class="card-section">
          <h3 class="flip-card-inner-back-title"><%= cocktail.name %></h3>
          <% cocktail.rating.times do %>
          <i class="far fa-star"></i>
          <% end %>
          <div class="ingredients">
            <% cocktail.doses.each do |dose|%>
            <div class="ingredient">
              <span><%= dose.ingredient.name %></span>
              <span><%= dose.description %></span>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
