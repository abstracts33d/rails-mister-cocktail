<%= render 'banner' %>
<div class="grid-container fluid">
  <div class="grid-x grid-margin-x grid-margin-y grid-padding-y">
    <div class="cell">
      <h1 class="align-center title">All our Cocktails</h1>
      <div class="grid-x grid-margin-x small-up-1 medium-up-3 large-up-4 align-center">
        <% @cocktails.each do |cocktail| %>
        <%= render 'cocktail-card', cocktail: cocktail %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'dynamic_hover_chars' %>
